{
  "name": "directory-watcher-app",
  "version": "0.0.0",
  "main": "dist/main.js",
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dev": "rimraf dist && run-p dev:webpack dev:electron",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "dev:pro": "rimraf dist && run-p dev:webpack:pro dev:electron:pro",
    "dev:webpack:pro": "cross-env NODE_ENV=\"production\" webpack --progress",
    "dev:electron:pro": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "build": "electron-builder --win --x64",
    "build:publish": "electron-builder --win --x64 --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "electronmon": {
    "patterns": [
      "dist/**/*",
      "!dist/assets/**/*"
    ]
  },
  "build": {
    "productName": "SBL-DirectoryWatcherApp",
    "appId": "com.sublimation.directory-watcher-app",
    "directories": {
      "output": "build/${version}/"
    },
    "files": [
      "dist",
      "node_modules",
      "package.json",
      "assets"
    ],
    "extraResources": [
      "assets"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis",
      "artifactName": "${productName}-SetUp-v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "reo3190",
      "repo": "Directory-Watcher-App"
    }
  },
  "description": "",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.17",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electronmon": "^2.0.3",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "node-loader": "^2.1.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.2",
    "@vanilla-extract/webpack-plugin": "^2.3.19",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "electron-progressbar": "^2.2.1",
    "electron-updater": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-loader-spinner": "^6.1.6",
    "react-router-dom": "^7.1.1",
    "react-select": "^5.10.1",
    "react-spring": "^9.7.5",
    "windows-shortcuts": "^0.1.6"
  }
}
